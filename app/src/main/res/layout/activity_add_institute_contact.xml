<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/activitySidePadding"
    android:paddingRight="@dimen/activitySidePadding"
    android:paddingLeft="@dimen/activitySidePadding"
    android:paddingEnd="@dimen/activitySidePadding"
    tools:context="in.tomtontech.markaz.Admin.Activity.AddInstituteContactActivity"
    >
  <TextView
      android:id="@+id/addInstituteContact_form_subtitle"
      style="@style/form_subtitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/add_institute_subtitle_contact_details"
      />
  <LinearLayout
      android:layout_above="@+id/addInstituteContact_form_linearSocial"
      android:layout_below="@+id/addInstituteContact_form_subtitle"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView
        style="@style/form_label_style"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:text="@string/form_label_institution_contact_no"
        />
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:text="Add"
          android:onClick="onAddNumberClicked"
          android:textColor="@color/white"
          android:gravity="center"
          android:layout_gravity="center"
          android:textAllCaps="true"
          android:background="@color/btnQuranColor"
          android:padding="@dimen/form_addButtonPadding"
          android:layout_weight="1"
          />
    </LinearLayout>
    <ListView
        android:id="@+id/addInstitute_listContactNo"
        android:inputType="textEmailAddress"
        style="@style/form_editText_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
  </LinearLayout>
  <LinearLayout
      android:layout_above="@+id/addInstituteContact_form_linearPlace"
      android:id="@+id/addInstituteContact_form_linearSocial"
      android:baselineAligned="false"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
    <TextView
        style="@style/form_label_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/form_label_institution_website"
        />
      <EditText
          android:id="@+id/addInstitute_instWeb"
          android:inputType="textWebEmailAddress"
          style="@style/form_editText_style"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />
      </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
    <TextView
        style="@style/form_label_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/form_label_institution_email"
        />
    <EditText
        android:id="@+id/addInstitute_instEmail"
        android:inputType="textEmailAddress"
        style="@style/form_editText_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
      </LinearLayout>
    </LinearLayout>
  <LinearLayout
      android:id="@+id/addInstituteContact_form_linearPlace"
      android:layout_alignParentBottom="true"
      android:baselineAligned="false"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
      <TextView
          style="@style/form_label_style"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/form_label_institution_latitude"
          />
      <EditText
          android:id="@+id/addInstitute_instLatitude"
          android:inputType="number"
          style="@style/form_editText_style"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
      <TextView
          style="@style/form_label_style"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/form_label_institution_longitude"
          />
      <EditText
          android:id="@+id/addInstitute_instLongitude"
          style="@style/form_editText_style"
          android:inputType="number"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />
    </LinearLayout>
  </LinearLayout>
</RelativeLayout>
