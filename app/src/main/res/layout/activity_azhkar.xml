<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    tools:context="in.tomtontech.markaz.Activity.AzhkarActivity"
    >
  <TextView
      style="@style/activity_subHeader.Notice"
      android:text="@string/azhkaar"
      android:id="@+id/activity_subHeader"
      />
  <ListView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/activity_subHeader"
      android:paddingBottom="10dp"
      android:scrollbarTrackVertical="@null"
      android:scrollbars="none"
      android:scrollbarAlwaysDrawVerticalTrack="false"
      android:id="@+id/azhkar_gridView"
      />
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:visibility="gone"
      android:id="@+id/network_llError"
      android:orientation="vertical"
      android:layout_centerInParent="true"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/internet_error"
        style="@style/connection_error_text"
        />
    <Button
        android:layout_width="wrap_content"
        style="@style/connection_error_button"
        android:layout_height="wrap_content"
        android:onClick="onRetryClick"
        android:text="@string/btn_retry"
        />
  </LinearLayout>
</RelativeLayout>
