<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.tomtontech.markaz.Activity.QuranStartActivity"
    >
  <ImageView
      android:src="@drawable/quran_cover1"
      android:id="@+id/quranStart_imageView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="fitXY"
      />
  <ImageView
      android:src="@drawable/quran_cover_piece"
      android:id="@+id/quranStart_imageView_piece"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:scaleType="fitXY"
      />
</RelativeLayout>
