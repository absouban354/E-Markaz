<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/activitySidePadding"
    android:paddingEnd="@dimen/activitySidePadding"
    android:paddingRight="@dimen/activitySidePadding"
    android:paddingLeft="@dimen/activitySidePadding"
    android:layout_height="match_parent"
    tools:context="in.tomtontech.markaz.Admin.Activity.AddInstituteCourseActivity"
    >
  <TextView
      android:id="@+id/addInstituteCourse_form_subtitle"
      style="@style/form_subtitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/add_institute_subtitle_course_details"
      />
  <LinearLayout
      android:id="@+id/addInstituteCourse_form_linearLabel"
      android:layout_below="@id/addInstituteCourse_form_subtitle"
      android:paddingTop="@dimen/activityTopPadding"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <TextView
        style="@style/form_label_style"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:text="@string/form_label_institution_course"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/dialog_btn_contact_add"
        android:onClick="onAddCourseClicked"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:background="@color/btnQuranColor"
        android:padding="@dimen/form_addButtonPadding"
        android:layout_weight="1"
        />
  </LinearLayout>
  <ListView
      android:id="@+id/addInstitute_listCourse"
      android:layout_below="@+id/addInstituteCourse_form_linearLabel"
      android:inputType="textEmailAddress"
      style="@style/form_editText_style"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />
</RelativeLayout>
