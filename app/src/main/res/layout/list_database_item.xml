<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:paddingStart="@dimen/activitySidePadding"
              android:paddingLeft="@dimen/activitySidePadding"
              android:paddingEnd="@dimen/activitySidePadding"
              android:paddingRight="@dimen/activitySidePadding"
              android:paddingTop="@dimen/listview_topPadding"
              android:paddingBottom="@dimen/listview_topPadding"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    >
  <LinearLayout
      android:layout_width="0dp"
      android:orientation="vertical"
      android:layout_gravity="center"
      android:layout_height="wrap_content"
      android:layout_weight="5"
      >
    <TextView
        android:id="@+id/database_textview"
        android:layout_width="match_parent"
        android:text="Quran Class"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/database_subItem"
        android:text="24-07-2017"
        />
  </LinearLayout>
  <ImageView
      android:layout_width="0dp"
      android:id="@+id/database_view"
      android:src="@drawable/ic_view_24dp"
      android:padding="2dp"
      android:layout_margin="5dp"
      android:background="@drawable/btn_view_bg"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      />
  <ImageView
      android:id="@+id/database_edit"
      android:layout_width="0dp"
      android:padding="2dp"
      android:layout_margin="5dp"
      android:background="@drawable/btn_edit_bg"
      android:src="@drawable/ic_edit_black_24dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      />
  <ImageView
      android:id="@+id/database_delete"
      android:layout_width="0dp"
      android:padding="2dp"
      android:layout_margin="5dp"
      android:background="@drawable/btn_delete_bg"
      android:src="@drawable/ic_delete_black_24dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      />
  <ImageView
      android:id="@+id/database_addImage"
      android:layout_width="0dp"
      android:padding="2dp"
      android:layout_margin="5dp"
      android:background="@drawable/btn_add_image_bg"
      android:src="@drawable/ic_delete_black_24dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      />
</LinearLayout>