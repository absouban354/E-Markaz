<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:paddingTop="@dimen/listview_topPadding"
              android:paddingBottom="@dimen/listview_topPadding"
              android:baselineAligned="false"
              android:background="@color/bgForListQuran"
              android:layout_height="wrap_content"
    >
  <LinearLayout
      android:layout_width="0dp"
      android:id="@+id/quranList_suraNoRelative"
      android:layout_height="wrap_content"
      android:layout_weight="3"
      android:orientation="vertical"
      >
    <TextView
        style="@style/QuranList_SurahId"
        android:text="122"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/QuranList_surahId"
        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/quranList_suraIdDivider"
        android:background="#AA626262"
        />
    <TextView
        style="@style/QuranList_SurahAyat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/QuranList_surahAyat"
        android:gravity="center"
        android:text="7 ayats"
        android:textColor="#FF626262"
        />
  </LinearLayout>
  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="6"
      android:orientation="vertical"
      >
    <TextView
        style="@style/QuranList_SurahName"
        android:text="Al Fathiha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/QuranList_surahName"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="invisible"
        />
    <TextView
        style="@style/QuranList_SurahMeaning"
        android:text="Opening"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/QuranList_surahMeaning"
        android:textStyle="bold"
        android:textColor="#AA626262"
        />
  </LinearLayout>
  <TextView
      android:id="@+id/QuranList_surahPlace"
      style="@style/QuranList_SurahPlace"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="4"
      android:textColor="#AA626262"
      android:text="Makkiyyah"
      />
  <TextView
      android:id="@+id/QuranList_surahPage"
      style="@style/QuranList_SurahPage"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="2"
      android:layout_gravity="center"
      android:gravity="center"
      android:text="1"
      />
</LinearLayout>