<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/appBar_minHeight"
    android:background="@color/quranAppBarColor"
    app:theme="@style/QuranTheme">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-Markaz"
            android:id="@+id/quranRead_TitleBar"
            style="@style/appBar_Title" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quranRead_PageNo"
            android:text="Page 1"
            style="@style/quranRead_appBar_subTitle"
            android:layout_below="@+id/quranRead_TitleBar"
            />
    </RelativeLayout>
</android.support.v7.widget.Toolbar>