<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.tomtontech.markaz.Activity.ListQuranActivity"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/subTitle_height"
        android:paddingStart="@dimen/subTitle_sidePadding"
        android:paddingLeft="@dimen/subTitle_sidePadding"
        android:paddingRight="@dimen/subTitle_sidePadding"
        android:paddingEnd="@dimen/subTitle_sidePadding"
        android:id="@+id/listQuran_surahTitle"
        android:text="@string/listQuran_subTitle"
        style="@style/ListActivity_Subtitle"
        />
    <ListView
        android:layout_below="@+id/listQuran_surahTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listQuran_Surah"/>
</RelativeLayout>
