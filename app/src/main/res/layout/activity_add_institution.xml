<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.tomtontech.markaz.Admin.Activity.AddInstitutionActivity"
    >
  <LinearLayout
      android:orientation="vertical"
      android:paddingStart="@dimen/activitySidePadding"
      android:paddingEnd="@dimen/activitySidePadding"
      android:paddingRight="@dimen/activitySidePadding"
      android:paddingLeft="@dimen/activitySidePadding"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
      <TextView
          style="@style/form_subtitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/add_institute_subtitle_institution_details"
          />
      <TextView
          style="@style/form_label_style"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/form_label_institution_name"
          />
      <EditText
          android:id="@+id/addInstitute_instName"
          style="@style/form_editText_style"
          android:inputType="textPersonName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />
      <TextView
          style="@style/form_label_style"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/form_label_institution_label"
          />
      <EditText
          android:id="@+id/addInstitute_instLabel"
          android:inputType="textPersonName"
          style="@style/form_editText_style"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />
      <TextView
          style="@style/form_label_style"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/form_label_institution_category"
          />
      <Spinner
          android:id="@+id/addInstitute_instCategory"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />
      <TextView
          style="@style/form_label_style"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/form_label_institution_address"
          />
      <EditText
          android:id="@+id/addInstitute_instAddress"
          android:inputType="textMultiLine"
          style="@style/form_editText_style"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />
      <TextView
          style="@style/form_label_style"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/form_label_institution_established"
          />
      <EditText
          android:id="@+id/addInstitute_instEstablished"
          style="@style/form_editText_style"
          android:inputType="number"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />
      <TextView
          style="@style/form_label_style"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/form_label_institution_desc"
          />
      <EditText
          android:id="@+id/addInstitute_instDescription"
          android:inputType="textMultiLine"
          style="@style/form_editText_style"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />
    </LinearLayout>
    <TextView
        style="@style/form_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_institute_subtitle_administrative_details"
        />
    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical"
          >
        <TextView
            style="@style/form_label_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/form_label_institution_principal_name"
            />
        <EditText
            android:id="@+id/addInstitute_instPrincName"
            android:inputType="textPersonName"
            style="@style/form_editText_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
      </LinearLayout>
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical"
          >
        <TextView
            style="@style/form_label_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/form_label_institution_principal_no"
            />
        <EditText
            android:id="@+id/addInstitute_instPrincNo"
            android:inputType="number"
            style="@style/form_editText_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
      </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical"
          >
        <TextView
            style="@style/form_label_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/form_label_institution_ao_name"
            />
        <EditText
            android:id="@+id/addInstitute_instAoName"
            android:inputType="textPersonName"
            style="@style/form_editText_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
      </LinearLayout>
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical"
          >
        <TextView
            style="@style/form_label_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/form_label_institution_ao_number"
            />
        <EditText
            android:id="@+id/addInstitute_instAoNo"
            android:inputType="number"
            style="@style/form_editText_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
      </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical"
          >
        <TextView
            style="@style/form_label_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/form_label_institution_student_num"
            />
        <EditText
            android:id="@+id/addInstitute_instStudent"
            android:inputType="number"
            style="@style/form_editText_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
      </LinearLayout>
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical"
          >
        <TextView
            style="@style/form_label_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/form_label_institution_alumni"
            />
        <EditText
            android:id="@+id/addInstitute_instAlumni"
            android:inputType="number"
            style="@style/form_editText_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
      </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical"
          >
        <TextView
            style="@style/form_label_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/form_label_institution_teach_count"
            />
        <EditText
            android:id="@+id/addInstitute_instTeach"
            android:inputType="number"
            style="@style/form_editText_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
      </LinearLayout>
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical"
          >
        <TextView
            style="@style/form_label_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/form_label_institution_non_teach_count"
            />
        <EditText
            android:id="@+id/addInstitute_instNonTeach"
            style="@style/form_editText_style"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
</ScrollView>
