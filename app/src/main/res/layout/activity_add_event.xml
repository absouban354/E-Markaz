<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.tomtontech.markaz.Admin.Activity.AddEventActivity"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:paddingStart="@dimen/activitySidePadding"
      android:paddingEnd="@dimen/activitySidePadding"
      android:paddingRight="@dimen/activitySidePadding"
      android:paddingLeft="@dimen/activitySidePadding"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >
    <TextView
        style="@style/form_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_events_subtitle"
        />
    <ImageView
        android:id="@+id/addEvent_imageView"
        android:src="@mipmap/ic_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="100dp"
        android:onClick="openGallery"
        android:layout_gravity="center"
        android:minHeight="100dp"
        />
    <TextView
        style="@style/form_label_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/form_label_event_name"
        />
    <EditText
        android:id="@+id/addEvent_eventName"
        style="@style/form_editText_style"
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        style="@style/form_label_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/form_label_event_place"
        />
    <EditText
        android:id="@+id/addEvent_eventPlace"
        android:inputType="textPersonName"
        style="@style/form_editText_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        style="@style/form_label_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/form_label_event_time"
        />
    <EditText
        android:id="@+id/addEvent_time"
        android:inputType="time"
        style="@style/form_editText_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        style="@style/form_label_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/form_label_event_date"
        />
    <EditText
        android:id="@+id/addEvent_eventDate"
        style="@style/form_editText_style"
        android:inputType="date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        style="@style/form_label_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/form_label_event_desc"
        />
    <EditText
        android:id="@+id/addEvent_eventDesc"
        style="@style/form_editText_style"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        style="@style/form_label_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/form_label_event_number"
        />
    <EditText
        android:id="@+id/addEvent_eventContact"
        style="@style/form_editText_style"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
  </LinearLayout>
</ScrollView>
