<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.tomtontech.markaz.Activity.QuranReadActivity"
    >
  <include
      android:id="@+id/quranRead_toolbar"
      layout="@layout/app_bar_quran"
      />
  <FrameLayout
      android:layout_below="@+id/quranRead_toolbar"
      android:id="@+id/quranRead_frameforfragment"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/quranRead_fragment"
        android:name="in.tomtontech.markaz.BlankFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
  </FrameLayout>
</RelativeLayout>
